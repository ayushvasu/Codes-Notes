#To build the docker image
docker build -t ayush .

#show all docker image
docker images

#show all docker running image
docker ps -a

#show logs generated by docker image run
docker logs -f 2cdf5fb34906

#run the docker image -d for background
docker run -it -d ayush3 

#run with mounted volume
docker run -v /home/ayush/log:/tmp -it -d ayush5

#for port forwarding add with running command
-p 8080:80

#to go to bash of running image
docker exec -it bfe9565ff999 /bin/bash
